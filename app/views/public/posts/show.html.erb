<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= image_tag @post.get_image(100,100) %>
    </div>
  
  <div class="col-md-8  offset-md-1">
   <div class="field">
     <h3><%= @post.liquor_name %></h3>
     <p><%= @post.liquor_content %></p>
     <p><%= @post.comment %></p>
     <%= @post.created_at.strftime('%Y/%m/%d') %>
     <% if @post.customer == current_customer %>
     <%= link_to "変更する", edit_public_post_path(@post) %>
     <% end %>
       </div>
      </div>
     </div>
    </div>
  </div>