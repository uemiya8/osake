<div class="container">
 <h4 class="mb-5"><%= @customer.name %>さんの会員情報編集</h4>
 <div class="row mx-auto" style="max-width: 360px;">
  <%= form_with model: @customer,url:public_customer_path do |f| %>

<table class="table table-hover table-invrse">
 <tbody>
  <tr>
   <th>名前</th>
   <td><%= f.text_field :name %>
  </tr>
  <tr>
   <th>メールアドレス</th>
   <td><%= f.text_field :email %></td>
  </tr>
 </tbody>
</table>

<div class="mt-3">
 <p class="row justify-content-end"><%= f.submit '編集内容を保存',  class: "btn btn-outline-success" %>     
  <%= link_to '退会する', public_customers_unsubscribe_path, class: "btn btn-outline-danger" %>
 </p>
<% end %>
 </div><!-- row end-->
</div><!-- container end --> 