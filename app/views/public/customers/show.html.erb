<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">

<h4>マイページ</h4>

<h5>登録情報</h5>
<%= link_to "編集する", edit_public_customer_path(@customer.id), class: "btn btn-sn btn-success" %>
<table class="table">
  <tbody>
  <tr>
    <td>氏名</td>
    <td><%= @customer.name %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
  </tbody>
</table>
</div>
</div>
</div>

<h3>投稿一覧</h3>
<div class="container px-5 px-sm-0">
<div class="row">
 <div class="col-md-3" "offset-md-1">
  <div class="d-flex flex-row bd-highlight mb-3">
   <% @posts.each do |post| %>
    <div class="p-2 bd-highlight">
     <%= link_to public_post_path(post.id) do %> 
      <%= image_tag post.get_image(100,100) %>
      <%= post.liquor_name %>
      <%= post.customer.name %>
      <%= post.created_at.strftime('%Y/%m/%d') %>
     <% end %> 
    </div>
   <% end %>
  </div>
 </div>
</div>
</div>