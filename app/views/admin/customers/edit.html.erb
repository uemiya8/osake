<div class="container">
 <h4 class="mb-5"><%= @customer.name %>さんの会員情報編集</h4>
 <div class="row mx-auto" style="max-width: 360px;">
  <%= form_with model: @customer,url:admin_customer_path(@customer.id) do |f| %>
  <dl class="row">
   <dt class= "col-5">会員ID</dt>
   <dd class="px-3 col-7"><%= @customer.id %></dd>
  </dl>
  <dl class="row">
   <dt class= "col-5">氏名</dt>
   <dd class="px-3 col-7"><%= f.text_field :name %></dd>
  </dl>
  <dl class="row">
   <dt class= "col-5">メールアドレス</dt>
   <dd class="px-3 col-7"><%= f.text_field :email %></dd>
  </dl>
  <dl class="row">
   <dt class= "col-5">会員ステータス</dt>
   <dd class="px-3 col-7">
    <%= f.radio_button :is_deleted, :false %>
    <%= f.label :is_deleted_false, "有効" %>
    <%= f.radio_button :is_deleted, :ture %>
    <%= f.label :is_deleted_ture, "無効" %>
   </dd>
  </dl>

  <div class="mt-3">
   <p class="row justify-content-end"><%= f.submit '変更を保存', class: "btn btn-outline-success" %></P>
  </div>
 </div>
</div><!-- container end -->
<% end %>
