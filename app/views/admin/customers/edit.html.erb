<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">

<h4><%= @customer.name %>さんの会員情報編集</h4>

<%= form_with model: @customer,url:admin_customer_path(@customer.id) do |f| %>
   <p>会員ID</p>
   <%= @customer.id %>
   <p>氏名</p>
   <%= f.text_field :name %>
   <p>メールアドレス</p>
   <%= f.text_field :email %>
   <p>会員ステータス</p>
    <%= f.radio_button :is_deleted, :false %>
     <%= f.label :is_deleted_false, "有効" %>
    <%= f.radio_button :is_deleted, :ture %>
     <%= f.label :is_deleted_ture, "無効" %>
   <%= f.submit '変更を保存', class: "btn btn-sn btn-success" %>
 <% end %>
 
 