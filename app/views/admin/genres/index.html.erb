<div class="container">
<h2>ジャンル一覧追加</h2> 

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
　<%= f.submit '新規登録', class: "btn btn-outline-primary" %>
<% end %>
 
<table class= "table table-hover table-invrse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-success" %></td>
        <td><%= link_to "削除する", admin_genre_path(genre), class: "btn btn-outline-danger", method: :delete, data: { confirm: "destroy?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table> 
</div>